{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
        <style>
        table, th, td {border: 3px solid; text-align: center;}
        
        </style>
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Author Id</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for b in books %}
                <tr>
                    <th scope="row">{{ b.id }}</th>
                    <td>{{ b.name }}</td>
                    <td>{{ b.authorid }}</td>
                    <td>{{ b.price }}</td>
                    <td>{{ b.quantity }}</td>
                    <td>
                        {#<a href="{{ path('b_details', {'id': b.id}) }} " class='btn btn-success'>View</a>#}
                        {#<a href="{{ path('b_edit', {'id': b.id}) }}" class='btn btn-default'>Edit</a>#}
                        {#<a href="{{ path('b_delete', {'id': b.id}) }}" class='btn btn-danger'>Delete</a>#}
                        <a href="{{ path('book_views', {'id': b.id}) }} " class='btn btn-success'>View</a> 
                        <a href="{{ path('book_edit', {'id': b.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('book_delete', {'id': b.id}) }} " class='btn btn-danger'>Delete</a>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
