{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="type">Type:</label>
        {{ form_widget(form.type,{
            'attr':{
                'class':'form-control',
                'placeholder': 'type'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="bookid">Book ID:</label>
        {{ form_widget(form.bookid,{
            'attr':{
                'class':'form-control',
                'placeholder': 'bookid'
            }
        }) }}
    </div>
    <input type="submit" name="edit_category" value="Edit" class="btn btn-primary"/>
    {{ form_end(form) }}

    <a href="{{ path('category_list') }}" class="btn btn-default1">Back to Category List</a>
{% endblock %}
